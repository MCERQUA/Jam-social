<Layout title="Dashboard - Jam Social Media" description="Manage your media assets">
  <ClerkProvider client:only="react">
    <div class="flex h-screen bg-black overflow-hidden">
      <!-- Sidebar -->
      <DashboardSidebar client:only="react" />

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Top Bar -->
        <DashboardTopBar client:only="react" />

        <!-- Content Area -->
        <main class="flex-1 overflow-y-auto p-6">
          <div class="max-w-[1800px] mx-auto">
            <!-- Header -->
            <div class="mb-8">
              <h1 class="text-3xl font-bold text-white mb-2">All Media</h1>
              <p class="text-gray-400">Browse and manage your media assets</p>
            </div>

            <!-- Media Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
              {placeholderMedia.map((item) => (
                <MediaCard item={item} client:only="react" />
              ))}
            </div>

            <!-- Load More -->}
            <div class="mt-12 text-center">
              <button class="px-8 py-3 bg-gray-800/50 hover:bg-gray-700 border border-gray-500/30 hover:border-gray-500/50 text-white rounded-lg transition-all">
                Load More
              </button>
            </div>
          </div>
        </main>
      </div>
    </div>
  </ClerkProvider>
</Layout>

<style>
  /* Custom scrollbar for dashboard */
  main::-webkit-scrollbar {
    width: 8px;
  }

  main::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.2);
  }

  main::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, #ec4899 0%, #a855f7 100%);
    border-radius: 4px;
  }

  main::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, #f472b6 0%, #c084fc 100%);
  }
</style>
