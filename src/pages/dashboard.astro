---
import Layout from '../layouts/Layout.astro';
import { DashboardContainer } from '../components/dashboard/DashboardContainer';
---

<Layout title="Dashboard - Jam Social Media" description="Manage your media assets">
  <DashboardContainer client:only="react" />
</Layout>

<style>
  /* Custom scrollbar for dashboard */
  :global(main::-webkit-scrollbar) {
    width: 8px;
  }

  :global(main::-webkit-scrollbar-track) {
    background: rgba(0, 0, 0, 0.2);
  }

  :global(main::-webkit-scrollbar-thumb) {
    background: linear-gradient(180deg, #3b82f6 0%, #a855f7 100%);
    border-radius: 4px;
  }

  :global(main::-webkit-scrollbar-thumb:hover) {
    background: linear-gradient(180deg, #60a5fa 0%, #c084fc 100%);
  }
</style>
