---
import Layout from '../layouts/Layout.astro';
import { SparklesText } from '../components/ui/sparkles-text';
---

<Layout title="Thank You - Jam Social Media">
  <div class="relative min-h-screen bg-gradient-to-b from-black via-gray-900 to-black overflow-hidden">
    {/* Background effects */}
    <div class="absolute inset-0 bg-[url('/noise.svg')] opacity-[0.02]"></div>
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-pink-500/10 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-purple-500/10 rounded-full blur-[120px]"></div>

    {/* Content */}
    <div class="relative z-10 flex flex-col items-center justify-center min-h-screen px-4 text-center">
      <div class="max-w-2xl mx-auto">
        {/* Success checkmark animation */}
        <div class="mb-8">
          <div class="relative inline-flex items-center justify-center w-32 h-32">
            <div class="absolute inset-0 bg-gradient-to-r from-pink-600 to-purple-600 rounded-full animate-pulse"></div>
            <div class="relative bg-gradient-to-r from-pink-500 to-purple-500 rounded-full w-28 h-28 flex items-center justify-center">
              <svg
                class="w-16 h-16 text-white animate-[scale-in_0.5s_ease-out]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="3"
                  d="M5 13l4 4L19 7"
                ></path>
              </svg>
            </div>
          </div>
        </div>

        {/* Success message */}
        <SparklesText
          text="Thank You!"
          className="text-5xl md:text-7xl font-bold text-white mb-6"
          sparklesCount={20}
          client:only="react"
        />

        <h2 class="text-2xl md:text-3xl font-semibold text-gray-200 mb-6">
          Your Message Has Been Sent Successfully
        </h2>

        <p class="text-lg text-gray-400 mb-8 max-w-xl mx-auto">
          We've received your inquiry and appreciate your interest in Jam Social Media.
          Our team will review your message and get back to you within 24 hours with a customized proposal.
        </p>

        {/* What to expect */}
        <div class="bg-gray-800/30 backdrop-blur-sm rounded-2xl p-8 border border-pink-500/20 mb-8">
          <h3 class="text-xl font-semibold text-white mb-4">What Happens Next?</h3>
          <ul class="text-left space-y-3 text-gray-300">
            <li class="flex items-start">
              <span class="text-pink-500 mr-3 mt-1">✓</span>
              <span>Our team will review your requirements and prepare a customized strategy</span>
            </li>
            <li class="flex items-start">
              <span class="text-pink-500 mr-3 mt-1">✓</span>
              <span>You'll receive a detailed proposal within 24 hours</span>
            </li>
            <li class="flex items-start">
              <span class="text-pink-500 mr-3 mt-1">✓</span>
              <span>We'll schedule a free consultation call to discuss your goals</span>
            </li>
            <li class="flex items-start">
              <span class="text-pink-500 mr-3 mt-1">✓</span>
              <span>Start transforming your social media presence with Jam</span>
            </li>
          </ul>
        </div>

        {/* Action buttons */}
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/"
            class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-pink-600 to-purple-600 text-white rounded-full font-semibold text-lg hover:from-pink-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            Back to Home
          </a>
          <a
            href="/#services"
            class="inline-flex items-center justify-center px-8 py-4 bg-gray-800 text-white border border-pink-500/30 rounded-full font-semibold text-lg hover:bg-gray-700 transition-all duration-300"
          >
            Explore Our Services
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes scale-in {
    0% {
      transform: scale(0);
    }
    50% {
      transform: scale(1.2);
    }
    100% {
      transform: scale(1);
    }
  }
</style>